<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<div class="orders-title">
				<h1>注文一覧画面</h1>
			</div>
			<div class="orders-box">
				<table class='table'>

					<thead>
						<tr class="active">
							<th>購入日時</th>
							<th>購入者</th>
							<th>注文個数</th>
							<th>注文ステータス</th>
						</tr>
					</thead>

					<tbody>
						<tr>
							<%= @orders.each do |order| %>
							<td>
								<%= link_to order.created_at.strftime(‘%Y/%m/%d %H:%M:%S’), admins_oder_path(end_user.id) %>
							</td>
							<td>
								<%= order.ddress_name %>
							</td>
							<% end %>

							<%= @cart_items.each do |item| %>
							<td>
								<%= item.quantity %>
							</td>
							<% end %>

							<%= @orders.each do |order| %>
							<td>
								<% if order.status == 0 %>
								<%= "入金待ち" %>
								<% elsif order.status == 1 %>
								<%= "入金確認" %>
								<% elsif order.status == 2 %>
								<%= "製作中" %>
								<% elsif order.status == 3 %>
								<%= "発送準備中" %>
								<%else%>
								<%= "発送済み" %>
								<% end %>
							</td>
							<% end %>

						</tr>
					</tbody>
				</table>
				<%= paginate @orders %>
			</div>

		</div>
		<div class="col-xs-3"></div>

	</div>
</div>

