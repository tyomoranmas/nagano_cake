<div class="row">
<div class="col-xs-7">
 <div class="order-title">
  <h1>注文詳細画面</h1>
 </div>

 <div class="customer-box">
  <label for="name"> 購入者 </label>
    <%= link_to admins_end_user_path(@end_user.id) do %>
    <%= @order.address_name %>
  <% end %><br>

  <label for="ship_addresses"> 配送先 </label>
    〒<%= @order.address %> <br>

  <label for="payment"> 支払方法 </label>
    <%= @order.payment %> <br>
    <%= form_for [:admins, @order] do |f| %>
  <div class="order_status">
    <%= f.label :注文ステータス %>
    <%= f.select :status, Order.statuses.keys %>
  </div>
    <div class="order_status_actions">
      <%= f.submit "更新", class: 'btn-xs btn-primary col-xs-4' %>
    </div>
  <% end %>
 </div>


 <div class="order-box">
  <table class='table'>

   <thead>
    <tr class="active">
     <th>商品名</th>
     <th>単価 (税込)</th>
     <th>数量</th>
     <th>小計</th>
     <th>製作ステータス</th>
    </tr>
   </thead>

   <tr>
      <% @order_products.each do |item| %>
        <td> <%= item.product.name %> </td>
        <td> <%= item.tax_included_price %> </td>
        <td> <%= item.quantity %> </td>
        <td> <%= item.tax_included_price * item.quantity %> </td>
      <% end %>

    <td>
      <%= form_for [:admins, @order] do |f| %>

      <%= f.fields_for :order_products do |order_product| %>
        <div class="production_status">
          <%= order_product.select :production_status, Order.production_statuses.keys %>
        </div>
      <% end %>
        <div class="production_status_actions">
          <%= f.submit "更新", class: 'btn-xs btn-primary col-xs-4' %>
        </div>
      <% end %>
    </td>
   </tr>

  </table>
 </div>
 </div>
<div class="col-xs-2"></div>

<div class="col-xs-3">
 <div class="price-box">
  <label for="total"> 商品合計 </label>
   <%= @order.total %> 円 <br>
  <label for="postage"> 送料 </label>
   <%= @order.postage %> 円 <br>
  <label for=""> 請求金額合計 </label>
   <%= @order.total + @order.postage %> 円 <br>
 </div>
</div>

</div>






