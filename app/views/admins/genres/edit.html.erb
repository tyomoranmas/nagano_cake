<div class="row">
  <h1>ジャンル編集画面</h1>

  <div class="col-sm-5 add-genre">
    <%= form_for [:admins, @genre] do |f| %>
      <%= f.label :name, "ジャンル" %>
      <%= f.text_field :name %>
      <label><%= f.radio_button :is_disabled, :有効 %>有効</label>
      <label><%= f.radio_button :is_disabled, :無効 %>無効</label>
      <%= f.submit('変更を保存する', class: 'btn-xs btn-primary') %>
    <% end %>
  </div>
</div>