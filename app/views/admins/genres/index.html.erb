<div class="row">
  <h1>ジャンル追加・一覧画面</h1>

  <div class="col-sm-5 add-genre">
    <%= form_for [:admins, @genre] do |f| %>
      <%= f.label :name, "ジャンル" %>
      <%= f.text_field :name %>
      <label><%= f.radio_button :is_disabled, :有効 %>有効</label>
      <label><%= f.radio_button :is_disabled, :無効 %>無効</label>
      <%= f.submit('追加', class: 'btn-xs btn-primary') %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-4 genre-index">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">ジャンル</th>
          <th scope="col">状態</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.is_disabled %></td>
            <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn-xs btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
