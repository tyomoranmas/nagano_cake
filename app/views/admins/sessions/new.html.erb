<!-- 管理者側ログイン画面 -->

<div class="row">
  <div class="col-xs-4"></div>

    <div class="col-xs-4" >
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", :size=>"50" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary w-50px" %>
        </div>
      <% end %>
    </div>

    <div class="col-xs-4"></div>

</div>



