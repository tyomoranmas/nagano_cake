<div class="row">
  <div class="title">
    <h1>商品一覧画面</h1>
  </div>
  <div class="add-product pull-right">
    <%= link_to("商品追加", new_admins_product_path, class: "glyphicon glyphicon-plus") %>
  </div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">商品ID</th>
        <th scope="col">商品名</th>
        <th scope="col">税抜価格</th>
        <th scope="col">ジャンル</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= link_to product.name, admins_product_path(product.id) %></td>
          <td>¥<%= product.tax_excluded_price.to_s(:delimited) %></td>
          <td><%= product.genre.name %></td>
          <td><%= product.is_stopped %></td>
        </tr>
      <% end %>
      <%= paginate @products, class: "paginate" %>
    </tbody>
  </table>
</div>