<div class="row">
  <%= render 'end_users/products/genre_search'%>

  <div class="col-xs-9">
    <h2><strong><%=@genre.name%>一覧</strong><small>(全<%=@products.count%>件)</small></h2>
    <% @products.each do |product|%>
    <div class="col-xs-offset-1">
      <div class="col-xs-3">
        <div>
          <%=link_to end_users_product_path(product) do%>
            <%= attachment_image_tag(product, :image,:fill, 100,100, fallback:"no_image.png", size:'150x150')%>
          <%end%>
        </div>
        <strong><%=product.name%><br>¥<%=product.tax_excluded_price%></strong>
      </div>
    </div>
    <%end%>
    <%= paginate @products%>
  </div>
</div>