<div class="row">
  <h1>マイページ</h1>
  <h2 class="col-xs-2">登録情報</h2>
  <%= link_to "編集する", edit_end_user_path(@end_user), class: "btn btn-primary col-xs-2 edit-btn" %>
  <%= link_to "パスワードを変更する", edit_end_user_registration_path(@end_user), class: "btn btn-primary col-xs-3 pass-btn" %>

  <table class="table table-bordered">
    <tr>
      <th class="my-page">氏名</th>
      <td><%= @end_user.last_name %>　<%= @end_user.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @end_user.last_name_kana %>　<%= @end_user.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @end_user.post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @end_user.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @end_user.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @end_user.email %></td>
    </tr>
  </table>
</div>

<div class="row">
  <h2 class="col-xs-2">配送先</h2>
  <%= link_to "一覧を見る", end_users_ship_addresses_path(@end_user), class: "btn btn-primary col-xs-2 index-btn" %>
</div>

<div class="row">
  <h2 class="col-xs-2">注文履歴</h2>
  <%= link_to "一覧を見る", end_users_orders_path(@end_user), class: "btn btn-primary col-xs-2 index-btn"%>
</div>