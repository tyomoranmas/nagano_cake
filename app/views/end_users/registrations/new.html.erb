<div class="row">
  <h1>新規会員登録</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>

  <%= render 'end_users/shared/form', f: f %>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em class="password">(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>

    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">

    <%= f.label :パスワード（確認用）, class: "password-confirmation" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success col-xs-2 col-xs-offset-2" %>
  </div>
  <% end %>
</div>

<div class="row">
  <h1>既に登録済みの方</h1>
  <div class="col-xs-offset-2">
    <%= render "end_users/shared/links" %>
  </div>
</div>