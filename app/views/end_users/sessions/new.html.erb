<div class="row">
  <h1>会員の方はこちらからログイン</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス, class: "login-email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 50%;" %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class: "login-password" %>
    <%= f.password_field :password, autocomplete: "current-password", style: "width: 50%;" %>
  </div>
  <div class="col-xs-offset-6 col-xs-6">
    <%= render "end_users/shared/links_password"%>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary col-xs-2 col-xs-offset-4" %>
  </div>
  <% end %>
</div>

<div class="row">
  <h1>登録がお済みでない方</h1>
  <div class="col-xs-6 col-xs-offset-2">
    <%= render "end_users/shared/links" %>
  </div>
</div>