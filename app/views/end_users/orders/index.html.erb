<h1>注文履歴一覧</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= order.post_code %><br>
        <%= order.address %><br>
        <%= order.address_name %>
      </td>
      <td><%= order.order_products.map{ |order_product| order_product.product.name } %></td>
      <td><%= order.total %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", end_users_order_path(order), class: "btn btn-primary"%></td>
    </tr>
    <% end %>
  </tbody>
</table>