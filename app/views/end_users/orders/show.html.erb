<h1>注文履歴詳細</h1>

<div class="row">
  <div class="col-xs-8">
    <h2>注文情報</h2>
    <table class="table table-bordered">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.post_code %>
          <%= @order.address %>
          <%= @order.address_name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </table>
  </div>

  <div class="col-xs-4">
    <h2>請求情報</h2>
    <table class="table table-bordered">
      <tr>
        <th>商品合計</th>
        <td><%= @order.sum.to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <th>ご請求金額</th>
        <td><%= @order.total.to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
</div>

<h2>注文内容</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価 (税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_products.each do |item| %>
    <tr>
      <td><%= item.product.name %></td>
      <td><%= item.tax_included_price.to_s(:delimited) %></td>
      <td><%= item.quantity %></td>
      <td><%= (item.tax_included_price * item.quantity).to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>
</table>